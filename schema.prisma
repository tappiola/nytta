// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Amenity {
  id         Int          @id @default(autoincrement())
  name       String
  parentId   Int?
  UserChoice UserChoice[]
}

model UserChoice {
  id                Int     @id @default(autoincrement())
  shortName         String?
  longName          String?
  locality          String?
  district          String?
  place             String?
  neighborhood      String?
  postcode          String?
  region            String?
  country           String?
  latitude          Float
  longitude         Float
  userId            String
  partiallySelected Boolean @default(false)
  amenity           Amenity @relation(fields: [amenityId], references: [id])
  amenityId         Int
}
